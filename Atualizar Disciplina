      JRadioN5.setBackground(new Color(208,255,255));
			
      Bg = new ButtonGroup();
      Bg.add(JRadioN1);
      Bg.add(JRadioN2);
      Bg.add(JRadioN3);
      Bg.add(JRadioN4);
      Bg.add(JRadioN5);
      
